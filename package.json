{
    "name": "feedback-system",
    "private": true,
    "type": "module",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "check": "oxlint",
        "dev": "turbo dev",
        "build": "turbo build",
        "check-types": "turbo check-types",
        "format": "pnpm exec biome format --fix --json-formatter-enabled=false",
        "dev:form": "turbo -F form dev",
        "dev:web": "turbo -F web dev",
        "dev:server": "turbo -F server dev",
        "db:reset": "pnpm --filter @shared/database db:reset",
        "db:seed": "pnpm --filter @shared/database db:seed",
        "db:migrate": "pnpm --filter @shared/database db:migrate"
    },
    "devDependencies": {
        "@biomejs/biome": "2.2.3",
        "oxlint": "^1.12.0",
        "turbo": "^2.5.4"
    },
    "packageManager": "pnpm@10.4.1",
    "pnpm": {
        "onlyBuiltDependencies": [
            "better-sqlite3"
        ]
    }
}
