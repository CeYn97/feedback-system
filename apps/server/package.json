{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "db:local": "turso dev --db-file local.db",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "zod": "^4.0.2",
    "@orpc/server": "^1.8.6",
    "@orpc/client": "^1.8.6",
    "@orpc/openapi": "^1.8.6",
    "@orpc/zod": "^1.8.6",
    "fastify": "^5.3.3",
    "@fastify/cors": "^11.0.1",
    "drizzle-orm": "^0.44.2",
    "@libsql/client": "^0.15.9"
  },
  "devDependencies": {
    "@types/node": "^22.13.11",
    "tsdown": "^0.14.1",
    "typescript": "^5.8.2",
    "tsx": "^4.19.2",
    "drizzle-kit": "^0.31.2"
  }
}
